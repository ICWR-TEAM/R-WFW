# R-WFW Environment Configuration Template
# Copy this file to .env and update the values according to your environment

# Application Configuration
DEV_MODE=true
DB_USE=false
ALLOW_ALL_CORS=false

# Security Configuration
ALL_SECURITY_HEADERS=false
ANTI_XSS=false

# JWT Configuration
SECRET_KEY_JWT=incrustwerush.org

# Signature Keys (relative paths from app/ directory)
SIGNATURE_PRIVATE_KEY=../data/signature/private_key.pem
SIGNATURE_PUBLIC_KEY=../data/signature/public_key.pem

# Development Database Configuration
DEV_BASEURL=http://localhost:8090
DEV_DB_HOST=db
DEV_DB_USER=root
DEV_DB_PASS=root
DEV_DB_NAME=test

# Production Database Configuration
BASEURL=http://incrustwerush.org
DB_HOST=incrustwerush.org
DB_USER=incrustwerush.org
DB_PASS=incrustwerush.org
DB_NAME=incrustwerush.org
